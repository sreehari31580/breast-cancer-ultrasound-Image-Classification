# Cancer Detection App - Environment Configuration
# Copy this file to .env and customize for your environment

# Admin Users (comma-separated list of usernames with admin access)
# These users can access the Admin Analytics Dashboard
ADMIN_USERS=admin,sreehari,doctor1

# Database Path
DB_PATH=cancer_app.db

# Model Configuration
MODEL_VERSION=v1

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Paths (relative to project root)
DATA_RAW=data/raw
DATA_PROCESSED=data/processed
MODELS_DIR=models
REPORTS_DIR=reports

# Training Hyperparameters
IMG_SIZE=224
BATCH_SIZE=16
EPOCHS=10
LR=0.001
SEED=42

# Fine-tuning Options
FREEZE_BACKBONE=False
UNFREEZE_LAST_BLOCK=False

# Class Imbalance Handling
USE_BALANCED_SAMPLER=True
USE_CLASS_WEIGHTS=False
CLASS_WEIGHT_ALPHA=0.5

# Email Configuration (Optional - for Phase 2)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=Cancer Detection App <no-reply@cancerdetection.app>
